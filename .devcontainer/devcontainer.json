{
  "name": "uv",
  "build": { "dockerfile": "Dockerfile" },
  "remoteUser": "root",
  "runArgs": ["--gpus", "all", "--shm-size", "1gb"],
  "containerEnv": {
    "SHELL": "/bin/zsh",
    "MINARI_DATASETS_PATH": "${localWorkspaceFolder}/.minari"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "charliermarsh.ruff"
      ]
    }
  }
}
